<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainl"
    android:layout_height="match_parent"
    android:background="@color/temperature_text">




    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivSplash"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/slide1"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ToDo Task"
        android:textSize="28sp"
        android:id="@+id/intro"
        android:layout_marginTop="50dp"
        android:typeface="monospace"
        android:clickable="true"
        android:layout_above="@+id/introdesc"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just a random app for testing certain functionalities."
        android:textSize="16sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/introdesc"
        android:layout_alignParentBottom="true"
        android:typeface="monospace"
        android:clickable="true"
        android:layout_marginBottom="140dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
